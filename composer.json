{
	"autoload": {
		"psr-4": {
			"SlimSlider\\": "src"
		}
	},
	"config": {
		"platform-check": false,
		"optimize-autoloader": true
	},
	"require": {
		"devuri/wp-admin-page": "^3.1",
		"devuri/cpt-meta-box": "^0.1"
	},
	"require-dev": {
		"vimeo/psalm": "^4.8",
		"phpstan/phpstan": "^1.8",
        "phpstan/phpstan-strict-rules": "^1.3",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"friendsofphp/php-cs-fixer": "^3.0"
	},
	"scripts": {
		"install-no-req": "composer install --ignore-platform-reqs",
		"build": [
			"composer phplint",
			"composer psalm-secure",
			"composer phpstan",
			"composer php-cs-fixer",
			"composer no-dev -q",
			"composer no-dev"
		],
		"phpstan": [
			"composer install-no-req -q",
			"@php ./vendor/bin/phpstan analyse"
		],
		"phplint": [
			"composer install-no-req -q",
			"vendor/bin/parallel-lint --colors --exclude app --exclude vendor ."
		],
		"psalm-secure": [
			"composer install-no-req -q",
			"vendor/bin/psalm --taint-analysis"
		],
		"phpdoc": "php ./bin/phpdoc.phar",
		"psalm": "vendor/bin/psalm",
		"php-cs-fixer": [
			"composer install",
			"vendor/bin/php-cs-fixer fix src"
		],
		"no-dev": "composer install --no-dev -q"
	}
}
